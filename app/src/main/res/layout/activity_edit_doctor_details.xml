<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.gauranggoel.childvacination.EditDoctorDetails"
        android:background="#e49c0c">


        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_doc_my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/HeaderBar"
            android:background="@android:color/holo_blue_bright"
            android:elevation="4dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:id="@+id/edit_doc_icon"
                android:src="@drawable/ic_arrow_back_black_24dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Doctor Details"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/edit_doc_id"/>

        </android.support.v7.widget.Toolbar>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edit_doc_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Doctor Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edit_doc_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Doctor's Phone Number"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/edit_doc_hospital"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Doctor's Hospital"
                />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/edit_doc_submit"
            android:text="Edit"/>
    </LinearLayout>


